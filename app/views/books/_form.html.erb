<%= render 'errors/error', model: @book %>

<%= form_with model: book, local: true do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, required: true%><br>
  <%= f.label :author %>
  <%= f.text_field :author, required: true%><br>
  <%= f.label :year_published %>
  <%= f.number_field :year_published %><br>
  <%= f.label :page_count %>
  <%= f.number_field :page_count %><br>
  <%= f.label :description %>
  <%= f.text_area :description %><br>
  <%= f.submit %>
<% end %>