<h1>Reviews for <%= @book.title %></h1>

<ul>
  <% @reviews.each do |review| %>
    <li> Rating: <%= review.rating %> - <%= review.user.username %> says: <%= review.content %>
    <% if owns_resource?(review)%>
      <%= link_to "Edit", edit_book_review_path(@book, review) if review.book%>
    <% end %>
    </li>
  <% end %>
</ul>

<%= link_to "Add Review", new_book_review_path %><br>
<%= link_to "View Book", book_path(@book) %><br>
<%= link_to "All Books", books_path %>