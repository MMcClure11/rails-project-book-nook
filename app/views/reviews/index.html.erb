<h1>Reviews for <%= @book.title %></h1>

<ul>
  <% @reviews.each do |review| %>
    <li><%= link_to "Rating:", edit_book_review_path(@book, review) %><%= review.rating %> - <%= review.user.username %> says: <%= review.content %></li>
  <% end %>
</ul>

<%= link_to "Add Review", new_book_review_path %><br>
<%= link_to "View Book", book_path(@book) %><br>
<%= link_to "All Books", books_path %>