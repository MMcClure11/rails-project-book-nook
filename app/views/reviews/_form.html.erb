<% if @errors %>
<ul>
  <% @errors.each do |error| %>
    <li><%= error %></li>
  <% end %>
</ul>
<% end %>

<%#= form_with model: review, local: true do |f| %>
<%= form_for book.reviews.build do |f| %>
  <%= f.hidden_field :book_id %>
  <%= f.label :rating %>
  <%= f.number_field :rating %><br>
  <%= f.label :content %>
  <%= f.text_area :content %><br>
  <%= f.submit %>
<% end %>