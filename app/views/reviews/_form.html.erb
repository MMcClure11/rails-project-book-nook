<%= render 'errors/error', model: @review %>

<%= form_with model: review, local: true do |f| %>
  <%= f.hidden_field :book_id %>
  <%= f.label :rating %>
  <%= f.number_field :rating, :in => 1..10, :required => true  %><br>
  <%= f.label :content %>
  <%= f.text_area :content, :required => true %><br>
  <%= f.submit %>
<% end %>