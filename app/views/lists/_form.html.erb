<%= render 'errors/error', model: @list %>


    <%= form_with model: list, local: true do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name, required: true %>
 
    <%= f.label :description %>
    <%= f.text_area :description, required: true %>
 

      <% if current_user.books %>
        <%= f.collection_check_boxes :book_ids, list.books.sort_by_title, :id, :title %>
          <%#= box.check_box %><%#= box.label { box.text } %>
        <%# end %>
      <% end %>
     

    <%= f.submit %>
    <% end %>

