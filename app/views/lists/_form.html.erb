<%= render 'errors/error', model: @list %>

<div class="row justify-content-center">
  <div class="form-group" style="width :50em;">
    <%= form_with model: list, local: true do |f| %>

      <div class= "text-weight-bold text-dark text-center"><%= f.label :name %></div>
      <span><%= f.text_field :name, required: true, class: "form-control" %></span>
  </div>
  <div class="form-group" style="width :50em;">
    <p class= 'text-center'><%= f.label :description %></p>
    <%= f.text_area :description, required: true, class: "form-control" %>
  </div>

      <% if current_user.books %>
        <div class="justify-content-center pl-5" style="width :50em;">
        <%= f.collection_check_boxes :book_ids, list.books.sort_by_title, :id, :title %>
      <% end %>
      
      <div class="row justify-content-center"><%= f.submit value="Submit", class: "btn btn-outline-info" %>
    <% end %>