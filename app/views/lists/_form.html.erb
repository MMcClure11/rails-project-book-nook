<% if @errors %>
<ul>
  <% @errors.each do |error| %>
    <li><%= error %></li>
  <% end %>
</ul>
<% end %>

<%= form_with model: list, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, required: true %><br>
  <%= f.label :description %>
  <%= f.text_area :description, required: true %><br>
  <% if current_user.books %>
    <%= f.collection_check_boxes :book_ids, current_user.books.sort_by_title.uniq, :id, :title %><br>
  <% end %>
  
  <%= f.submit %>
<% end %>